@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="display-4">Restaurants</h1>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" name="searchTerm" class=" form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-dark">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Cuisine</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.Location</td>
                <td>@restaurant.Cuisine</td>
                <td>
                    <a asp-page="./Detail"
                       asp-route-restaurantId="@restaurant.Id"
                       class="btn btn-lg">
                        <i class="fas fa-search-plus"></i>
                    </a>
                    <a asp-page="./Edit"
                       asp-route-restaurantId="@restaurant.Id"
                       class="btn btn-lg">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-page="./Delete"
                       asp-route-restaurantId="@restaurant.Id"
                       class="btn btn-lg">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

